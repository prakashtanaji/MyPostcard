<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFA726"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/ImageDisplayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFA726"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/desert"
            android:focusableInTouchMode="true"
            />
        <TextView
            android:id="@+id/MsgText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy Holidays !!"
            android:padding="20dp"
            android:layout_alignLeft="@id/ImageDisplayed"
            android:layout_alignTop="@id/ImageDisplayed"
            android:layout_alignRight="@id/ImageDisplayed"
            android:onClick="EditMsgTxt"/>
        <TextView
            android:id="@+id/FromTxt"
            android:layout_alignBottom="@id/ImageDisplayed"
            android:layout_alignRight="@id/ImageDisplayed"
            android:layout_alignLeft="@id/ImageDisplayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From:Prax"
            android:padding="20dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Hello World!"
        android:background="#FFE0B2"
        android:textColor="#3E2723"
        android:padding="10dp"
        android:id="@+id/SubjectMsg"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"
        android:background="#FFE0B2"
        android:padding="2dp"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Picture"
            android:id="@+id/buttonTakePic"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="#FFA726"
            android:layout_margin="2dp"
            android:textColor="#3E2723"
            android:requiresFadingEdge="horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Postcard"
            android:id="@+id/buttonSendPostcard"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:background="#FFA726"
            android:layout_margin="2dp"
            android:textColor="#3E2723"
            android:onClick=""/>
    </LinearLayout>
</LinearLayout>